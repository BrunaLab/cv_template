	pages = {558--565},
	file = {Bruna et al. - 2004 - Interspecific variation in the defensive responses.pdf:files/4184/Bruna et al. - 2004 - Interspecific variation in the defensive responses.pdf:application/pdf;Bruna et al. - 2004 - Interspecific variation in the defensive responses.pdf:files/5206/Bruna et al. - 2004 - Interspecific variation in the defensive responses.pdf:application/pdf},
