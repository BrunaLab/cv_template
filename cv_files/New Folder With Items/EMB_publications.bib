	urldate = {2021-11-29},
	journal = {Ecology},
	author = {Bruna, Emilio M.},
	month = apr,
	year = {2003},
	pages = {932--947},
	annote = {Times Cited: 65 Bruna, Emilio M/H-2769-2012 Bruna, Emilio M/0000-0003-3381-8477 3 69},
	file = {Bruna - 2003 - ARE PLANT POPULATIONS IN FRAGMENTED HABITATS RECRU.pdf:files/4180/Bruna - 2003 - ARE PLANT POPULATIONS IN FRAGMENTED HABITATS RECRU.pdf:application/pdf;Bruna - 2003 - ARE PLANT POPULATIONS IN FRAGMENTED HABITATS RECRU.pdf:files/5204/Bruna - 2003 - ARE PLANT POPULATIONS IN FRAGMENTED HABITATS RECRU.pdf:application/pdf},
